
<% include ./partials/boilerplate %>

<h1>Appy Hour</h1>
<div class="hh-container">
<% hh.forEach(hh => { %>
    <div class="hh">
      <h3><%= hh.name %></h3>
      <div class="meta">
        <div class="category">
          <p><%= hh.hours %></p>
          <p><%= hh.img %></p>
          <p><%= hh.location %></p>
          <p><%= hh.specials %></p>
          <img src= "<%= hh.img %>"/>
        </div>
          <div class="completion" data-hhid="<%= hh.id %>">
            <p><%= (hh.completion) ? 'Done' : 'Happy Hour' %></p>
          </div>
        <div class="edit">
          <!-- <a href="/hh/<%= hh.id %>">Details</a>  //// add details about venue-->
        </div>
      </div>
    </div>
<% }) %>
</div>

<% include ./partials/end %>
